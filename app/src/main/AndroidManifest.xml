<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thanhnvdn.tmdbclient">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TMDBClient">
        <activity
            android:name=".presentation.tvshow.TvShowActivity"
            android:label="@string/title_activity_tv_show"
            android:theme="@style/Theme.TMDBClient.NoActionBar"></activity>
        <activity android:name=".presentation.movie.MovieActivity" />
        <activity android:name=".presentation.artist.ArtistActivity" />
        <activity android:name=".presentation.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>